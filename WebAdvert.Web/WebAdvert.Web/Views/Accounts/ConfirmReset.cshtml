@model WebAdvert.Web.Models.Accounts.ConfirmResetModel


<div class="row">
    <div class="col-md-4">
        <h5 class="alert alert-info">
            Confirm your reset password
        </h5>
        <form method="post" asp-controller="Accounts" asp-action="ConfirmReset">
            <div asp-validation-summary="All" class="text-danger" />

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" />
                <span asp-validation-for="Code" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <button type="submit">Confirm</button>

        </form>
    </div>
</div>
